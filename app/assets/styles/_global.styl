//Settings/Plugins
ks-no-conflict = true
@import "kouto-swiss"
@import 'lost';
//Lost Settings
$flexbox = true;
$gutter = 30px
$rtl = false
@import 'rupture';
@import 'typographic';
//Resets
//Corysimmons/boy reset
//to gell with lost and typographic
@import '_base/reset/reset.css'
ks-box-sizing-reset()
ks-normalize()
//Base
@import '_base/*'
//Mixins
@import '_base/mixins/*'
@import '_base/buttron/buttron'
//Defualt bg
body
  background: $bg

//#27AE60


.title
  height: 100vh !important
  .click
    // width: 100vw !important
    align(bottom)
    position: absolute
    left: 0
    right: 0%
    bottom: 50%
    top: 0
  .move
    align(top)
    position: absolute
    left: 0
    right: 0
    bottom: 0
    top: 50%
  h1
    buttron({
      font-size: 15em !important
      color: alpha(#2980B9, 0.6) !important
      text-shadow: 1px 1px 2px rgba(0,0,0, 0.25)
      padding: 0
      margin: 0
      font-weight: bold
      anim:{
        name: 'color'
        option:{
          count: infinite
          duration: 45s
        }
        timeline:{
          "12.5":{
            opacity: 0.9
          }
          "25":{
            color: alpha(#27AE60, 0.6) !important
            opacity: 1
          },
          "32.5":{
            opacity: 0.9
          }
          "50":{
            color: alpha(#8E44AD, 0.6) !important          
          }
          "62.5":{
            opacity: 0.9
          }
          "75":{
            color: alpha(#C0392B, 0.6) !important
          }
          "82.5":{
            opacity: 0.9
          }
        }
      }
    })